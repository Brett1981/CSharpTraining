@using Model
@model Model.Student



<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Styles/bootstrap.css" rel="stylesheet" />
    <link href="~/Styles/AddStudent.css" rel="stylesheet" />
    <script type="text/javascript" src="~/Styles/jquery-3.1.1.min.js"></script>
    <title>AddStudent</title>
    

    <script type="text/javascript">
        $(function () {
            $('#datetimepicker1').datetimepicker();



        });
    </script>



</head>
<body class="col-lg-6 col-lg-push-3">
    <form method="post" action="/Student/AddStudent">
        <div class="form-group">
            <label class="control-label" for="studentName">Name</label>
            <input class="form-control" type="text" id="studentName" name="studentName" placeholder="Name">
        </div>

        <div class="form-group">
            <label class="control-label" for="birthday">Gender</label>
            <div class="radio">
                <label class="control-label">
                    <input type="radio" name="gender" id="optionsRadios1" value="男" checked>
                    男
                </label>
            </div>
            <div class="radio">
                <label class="control-label">
                    <input type="radio" name="gender" id="optionsRadios2" value="女">
                    女
                </label>
            </div>
        </div>

@*        <div class="form-group">*@
@*            <label class="control-label" for="datetimepicker1">Birthday</label>*@
@*            <div class='input-group date' id='datetimepicker1'>*@
@*                <input type='text' class="form-control" name="birthday" placeholder="Birthday" />*@
@*                <span class="input-group-addon">*@
@*                    <span class="glyphicon glyphicon-calendar"></span>*@
@*                </span>*@
@*            </div>*@
@*        </div>*@
        
        <div class="form-group">
            <label class="control-label" for="birthday">Birthday</label>
            <input type="date" class="form-control" id="birthday" name="birthday" placeholder="Birthday">
        </div>

        <div class="form-group">
            <label class="control-label" for="studentIdNo">Student Id No</label>
            <input type="text" class="form-control" id="studentIdNo" name="studentIdNo" placeholder="Student Id No">
        </div>
        <div class="form-group">
            <label class=" control-label" for="cardNo">Card No</label>
            <input type="text" class="form-control" id="cardNo" name="cardNo" placeholder="Card No">
        </div>
        <div class="form-group">
            <label class=" control-label" for="photoNumber">Phone Number</label>
            <input type="text" class="form-control" id="photoNumber" name="phoneNumber" placeholder="Phone Number">
        </div>
        <div class="form-group">
            <label class=" control-label" for="studentAddress">Student Address</label>
            <input type="text" class="form-control" id="studentAddress" name="studentAddress" placeholder="Student Address">
        </div>
        <div class="form-group">
            <label class=" control-label" for="classId">Class Name</label>
            <select class="form-control" name="classId">
                @{
                    if (ViewBag.clsList != null)
                    {
                        foreach (StudentClass objClass in ViewBag.clsList)
                        {
                            <option value="@objClass.ClassId">@objClass.ClassName</option>
                        }

                    }

                }
            </select>
        </div>


        <button type="submit" class="btn btn-default">Submit</button>
    </form>
</body>
</html>
