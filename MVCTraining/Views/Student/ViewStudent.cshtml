@using Model
@model Model.Student

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Styles/bootstrap.css" rel="stylesheet" />
    <link href="~/Styles/ViewStudent.css" rel="stylesheet" />
    <link href="~/Styles/EditStudent.css" rel="stylesheet" />
    <script src="~/Styles/jquery-3.1.1.min.js"></script>
    <title>View Student</title>
</head>
<body class="col-lg-6 col-lg-push-3">
<form>
    @{
        if (ViewData["student"] != null)
        {
            Student objStudent = (Student) ViewData["student"];
            <fieldset disabled="">
                <div class="form-group">
                    <label class="control-label" for="studentId">Id</label>
                    <input class="form-control" type="text" id="studentId" name="StudentId" value="@objStudent.StudentId" placeholder="Id">
                </div>
                <div class="form-group">
                    <label class="control-label" for="studentName">Name</label>
                    <input class="form-control" type="text" id="studentName" name="StudentName" value="@objStudent.StudentName" placeholder="Name">
                </div>Gender

                <div class="form-group">
                    <label class="control-label" for="birthday">Gender</label>
                    <div class="radio">
                        <label class="control-label">
                            <input type="radio" name="Gender" id="optionsRadios1" value="男" checked="@objStudent.Gender.Equals("男")">
                            男
                        </label>
                    </div>
                    <div class="radio">
                        <label class="control-label">
                            <input type="radio" name="Gender" id="optionsRadios2" value="女" checked="@objStudent.Gender.Equals("女")">
                            女
                        </label>
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label" for="birthday">Birthday</label>
                    <input type="text" class="form-control" id="birthday" name="Birthday" value="@objStudent.Birthday.ToString("MM/dd/yyyy")" placeholder="Birthday">
                </div>

                <div class="form-group">
                    <label class="control-label" for="studentIdNo">Student Id No</label>
                    <input type="text" class="form-control" id="studentIdNo" name="StudentIdNo" value="@objStudent.StudentIdNo" placeholder="Student Id No">
                </div>
                <div class="form-group">
                    <label class=" control-label" for="cardNo">Card No</label>
                    <input type="text" class="form-control" id="cardNo" name="CardNo" value="@objStudent.CardNo" placeholder="Card No">
                </div>
                <div class="form-group">
                    <label class=" control-label" for="photoNumber">Phone Number</label>
                    <input type="text" class="form-control" id="photoNumber" name="PhoneNumber" value="@objStudent.PhoneNumber" placeholder="Phone Number">
                </div>
                <div class="form-group">
                    <label class=" control-label" for="studentAddress">Student Address</label>
                    <input type="text" class="form-control" id="studentAddress" name="StudentAddress" value="@objStudent.StudentAddress" placeholder="Student Address">
                </div>
                <div class="form-group">
                    <label class=" control-label" for="classId">Class Name</label>
                    <select class="form-control" name="ClassId">
                        <option value="@objStudent.ClassId">@ViewData["className"]</option>
                    </select>
                </div>
            </fieldset>

        }
        
    }
    <div class="btn-area">

        <a href="@Url.Action("Index", "Student")"><input type="button" class="btn btn-primary" value="Back" /></a>
    </div>
</form>
</body>
</html>
