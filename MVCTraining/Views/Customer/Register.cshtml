@model Model.Customer



<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Styles/bootstrap.css" rel="stylesheet" />
    <link href="~/Styles/Customer.css" rel="stylesheet" />
    <script src="~/Styles/jquery-3.1.1.min.js"></script>
    <title>Register</title>
</head>
<body class="col-lg-6 col-lg-push-3">
    <form method="post" action="/Customer/Register">
        <div class="form-group">
            <label class="control-label" for="LoginId">Login Id</label>
            <input class="form-control" type="text" id="LoginId" name="LoginId" value="@(Model!=null?Model.LoginId:"")" placeholder="User Name">
            @Html.ValidationMessage("LoginId", new { @class = "error" }) @Html.ValidationMessage("doubleUser", new { @class = "error" })
        </div>
        <div class="form-group">
            <label class="control-label" for="Password">Password</label>
            <input class="form-control" type="password" id="Password" name="LoginPwd" value="@(Model != null ? Model.LoginPwd : "")" placeholder="Password">
            @Html.ValidationMessage("LoginPwd", new { @class = "error" })
        </div>
        <div class="form-group">
            <label class="control-label" for="PasswordConfirm">Password Confirm</label>
            <input class="form-control" type="password" id="PasswordConfirm" name="PasswordConfirm" value="@(Model != null ? Model.PasswordConfirm : "")" placeholder="Password Confirm">
            @Html.ValidationMessage("PasswordConfirm", new { @class = "error" })
        </div>
        <div class="form-group">
            <label class="control-label" for="Name">Name</label>
            <input class="form-control" type="text" id="Name" name="Name" value="@(Model != null ? Model.Name : "")" placeholder="Name">
            @Html.ValidationMessage("Name", new { @class = "error" })
        </div>
        <div class="form-group">
            <label class="control-label" for="Age">Age</label>
            <input class="form-control" type="text" id="Age" name="Age" value="@(Model != null ? Model.Age : null)" placeholder="Age">
            @Html.ValidationMessage("Age", new { @class = "error" })
        </div>
        <div class="form-group">
            <label class="control-label" for="Address">Address</label>
            <input class="form-control" type="text" id="Address" name="Address" value="@(Model != null ? Model.Address : "")" placeholder="Address">
            @Html.ValidationMessage("Address", new { @class = "error" })
        </div>
        <div class="form-group">
            <label class="control-label" for="Phone">Phone</label>
            <input class="form-control" type="text" id="Phone" name="Phone" value="@(Model!=null?Model.Phone:"")" placeholder="Phone">
            @Html.ValidationMessage("Phone", new { @class = "error" })
        </div>
        <div class="form-group">
            <label class="control-label" for="Email">Email</label>
            <input class="form-control" type="text" id="Email" name="Email" value="@(Model!=null?Model.Email:"")" placeholder="Email">
            @Html.ValidationMessage("Email", new { @class = "error" })
        </div>




        <div class="btn-area">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>

    </form>
</body>

</html>
